<div class="container">
  <div class="row">
    <% @questions.each do |question| %>
      <div class="col s4">
        <div class="category z-depth-3">
          <%=question.category%>
        </div>
      </div>
      <div class="col s4">
        <div class="title z-depth-3">
          <%=question.content%>
        </div>
      </div>
      <div class="col s4"></div>
      <div class="question col s6 z-depth-3">
        <div class="row">
          <div class="col s2">
            <div class="left-button">
              <a class="btn-floating btn-large waves-effect waves-light"><i class="check material-icons">done</i></a>
            </div>
          </div>
          <div class="col s10">
            <div class="question-left">
              <p>
                <%=question.option_a%>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="question col s6 z-depth-3">
        <div class="row">
          <div class="col s10">
            <div class="question-right">
              <p>
                <%=question.option_b%>
              </p>
            </div>
          </div>
          <div class="col s2">
            <div class="right-button">
              <a class="btn-floating btn-large waves-effect waves-light"><i class="check material-icons">done</i></a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
