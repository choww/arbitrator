<% if @question.errors.any? %>
  <% @question.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<div class="new-question-1 container">
  <div class="new-question z-depth-3">
    <form  method="post" action="/" class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input id="content" type="text" name="question[content]" value="<%= @question.content %>">
          <label for="content">Title</label>
        </div>
        <div class="input-field col s6">
          <input id="option_a" type="text" name="question[option_a]" value="<%= @question.option_a %>">
          <label for="option_a">Option A</label>
        </div>
        <div class="input-field col s6">
          <input id="option_b" type="text" name="question[option_b]" value="<%= @question.option_b %>">
          <label for="option_b">Option B</label>
        </div>
        <div class="testy input-field col s12" name="category">
          <select name="question[category]">
            <option value="" disabled selected placeholder>Select One</option>
            <option value="food">Food</option>
            <option value="politics">Politics</option>
            <option value="sports">Sports</option>
            <option value="science">Science/Tech</option>
            <option value="pop-culture">Pop Culture</option>
            <option value="misc.">Misc.</option>
          </select>
          <label>Category</label>
        </div>
        <div class="input-field col s12" name="time">
          <select name="question[time]">
            <option value="" disabled selected placeholder>Select One</option>
            <option value="1">1 Minute</option>
            <option value="2">2 Minutes</option>
            <option value="5">5 Minutes</option>
          </select>
          <label>Question Length</label>
        </div>
      </div>
      <div class="submit-question-div">
        <button class="submit-question btn waves-effect waves-light" type="submit" value="Submit">Submit
          <i class="material-icons right">add</i>
        </button>
      </div>
    </form>
  </div>
</div>
