<div class="col s4">
  <div class="category z-depth-3">
    <%= question.category %>
  </div>
</div>

<div class="col s4">
  <div class="title z-depth-3">
    <%= question.content %>
    <% if created?(question) %>
      <a id="delete" href="/questions/<%=question.id%>/delete"><i class="material-icons">cancel</i></a>
    <%end%>
  </div>
</div>

<div class="col s4">
</div>

<% if created?(question) && question.resolved && question.votes.empty? %>
  <div class="col s12">
    <div class="card-panel">
        <form action="/questions/<%= question.id %>/edit" method="POST">
          <div class="input-field col s12" name="time">
            <select name="time">
              <option value="1">1 Minute</option>
              <option value="2">2 Minutes</option>
              <option value="5">5 Minutes</option>
            </select>
            <label>This question has no votes yet--would you like to extend the time limit?</label>
          </div>

          <button name="extend_time" value="yes" class="submit-question btn teal">Yes</button>
          <!-- <button name="extend_time" value="no" class="submit-question btn">No</button> -->
        </form>
    </div>
  </div>
<% end %>
    <div class="col s4">
        <div class="expiration">
          <time class="timeago z-depth-3" datetime="<%=question.expire_time.iso8601%>"><%=question.expire_time.strftime("%T")%></time>
        </div>
      </div>
<div class="question col s6 z-depth-3">
  <div class="row">
    <div class="col s2">
      <div class="left-button">
        <a class="btn-floating btn-large waves-effect waves-light"><i class="check material-icons">thumb_up</i></a>
      </div>
    </div>
    <div class="col s10">
      <div class="question-left">
        <p>
          <%= question.option_a %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="question col s6 z-depth-3">
  <div class="row">
    <div class="col s10">
      <div class="question-right">
        <p>
          <%= question.option_b %>
        </p>
      </div>
    </div>
    <div class="col s2">
      <div class="right-button">
        <a class="btn-floating btn-large waves-effect waves-light"><i class="check material-icons">thumb_up</i></a>
      </div>
    </div>
  </div>
</div>
